<%= form_for(@assignment) do |f| %>
  <% if @assignment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>

      <ul>
      <% @assignment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <section class="">
    <div class="eight">

    <%= f.label :title %>
    <%= f.text_field :title %>
  
    <%= f.label :total_points %>
    <%= f.text_field :total_points %>
  
    </div>
    <div class="four">
      <h3>Courses with this Assignment</h3>
      <% if @assignment.courses.empty? %>
        <p>No Courses use this Assignment</p>
      <% else %>
        <ul>
          <%= @assignment.courses.each do | course | %>
            <li><%= course.name %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </section>
  <div>
    <%= f.fields_for :criteria do |crit| %>
      <div class="field">
        <%= crit.label 'Criteria Text' %><br>
        <%= crit.text_field :text %>
      </div>
      <div class="field">
        <%= crit.label 'Criteria Weight' %><br>
        <%= crit.text_field :weight %>%
      </div>
      <%= f.fields_for :ratings do |raiting| %>
        <div class="field">
          <%= raiting.label 'Raiting Text' %><br>
          <%= raiting.text_field :text %>
        </div>
        <%= raiting.hidden_field :position %>
      <% end %>

    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
